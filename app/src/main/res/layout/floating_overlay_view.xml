<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true">

    <!-- Content container that occupies only the top half -->
    <LinearLayout
        android:id="@+id/overlay_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top half container - visible part -->
        <FrameLayout
            android:id="@+id/top_half_container"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="#33000000">

            <!-- Example content - replace with your actual content -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Overlay Content"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </FrameLayout>

        <!-- Bottom half - invisible -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
    </LinearLayout>
</FrameLayout>